# FastAPI Backend 환경 변수 템플릿
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 수정하세요.

# Docker Hub 정보
DOCKERHUB_USERNAME=your-dockerhub-username
IMAGE_TAG=latest


# PostgreSQL 설정 (Docker Compose용)
POSTGRES_USER=yamyam
POSTGRES_PASSWORD=yamyam_pass
POSTGRES_DB=yamyamdb
POSTGRES_PORT=5432

# Redis 설정
REDIS_URL=redis://redis:6379

# FAISS 서버 설정 (선택사항)
FAISS_SERVER_URL=http://localhost:7000

# JWT 설정
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 환경 설정
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Alembic 마이그레이션 설정 (옵션)
# true: 서버 시작 시 자동으로 마이그레이션 실행 (기본값)
# false: 마이그레이션 실행 안 함 (수동으로 실행하거나 별도 프로세스에서 실행)
RUN_MIGRATIONS=false

# Firebase 설정 (환경 변수 방식)
FIREBASE_KEY=<firebase-service-account-json-string>

# CORS 설정 (JSON 배열 형식 또는 쉼표로 구분)
# 개발 환경
ALLOWED_ORIGINS=["http://localhost:8501", "http://localhost:3000", "http://127.0.0.1:8501"]
# 프로덕션 환경 예시:
# ALLOWED_ORIGINS=["https://what2eat.streamlit.app", "https://your-domain.com"]
WORKERS=1

# Github token
GITHUB_TOKEN={GITHUB_TOKEN}

# JSON 서버 접속 정보
REMOTE_JSON_HOST={REMOTE_JSON_HOST}
REMOTE_JSON_PORT={REMOTE_JSON_PORT}
REMOTE_JSON_USER={REMOTE_JSON_USER}
REMOTE_JSON_PASS={REMOTE_JSON_PASS}
REMOTE_JSON_PATH={REMOTE_JSON_PATH}
REMOTE_N2V_WEIGHT_PATH={REMOTE_N2V_WEIGHT_PATH}
REMOTE_N2V_UTIL_PATH={REMOTE_N2V_UTIL_PATH}
